{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Server",
            "type": "shell",
            "command": "cargo run --release",
            "isBackground": true,
            "problemMatcher": {
                "owner": "rust",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(\\d+):(\\d+)\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "endLine": 4,
                    "endColumn": 5,
                    "severity": 6,
                    "message": 7
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\s*Compiling",
                    "endsPattern": "^\\s*Finished|^\\s*Error"
                }
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Stop Server",
            "type": "shell",
            "command": "pkill -f apexsim-server || echo 'Server not running'",
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run Integration Tests",
            "type": "shell",
            "command": "cargo test --test integration_test -- --ignored --nocapture",
            "problemMatcher": ["$rustc"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Start Server and Run Integration Tests",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Start Server",
                "Run Integration Tests",
                "Stop Server"
            ],
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}
