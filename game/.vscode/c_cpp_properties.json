{
    "configurations": [
        {
            "name": "Linux (Unreal Engine)",
            "includePath": [
                "${workspaceFolder}/**",
                "${env:HOME}/UnrealEngine/Engine/Source/**",
                "${env:HOME}/UnrealEngine/Engine/Plugins/**"
            ],
            "defines": [
                "WITH_EDITOR=1",
                "UE_BUILD_DEVELOPMENT=1",
                "UE_BUILD_LINUX=1",
                "PLATFORM_LINUX=1"
            ],
            "compilerPath": "/usr/bin/clang++",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "linux-clang-x64",
            "compileCommands": "${workspaceFolder}/compile_commands.json",
            "configurationProvider": "ms-vscode.makefile-tools"
        }
    ],
    "version": 4
}
